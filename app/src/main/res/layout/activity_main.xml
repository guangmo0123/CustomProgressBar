<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:billy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onStartProgressBar"
            android:text="Start ProgressBar" />

        <billy.snxi.customprogressbar.view.MyHorizontalProgressBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:padding="5dp"
            android:progress="50" />

        <billy.snxi.customprogressbar.view.MyHorizontalProgressBar
            android:id="@+id/myProgressBar1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:padding="5dp"
            android:progress="50"
            billy:progressbar_reach_color="#00f2ff"
            billy:progressbar_reach_height="3dp"
            billy:progressbar_text_color="#000dff"
            billy:progressbar_text_offset="2dp"
            billy:progressbar_text_size="9sp"
            billy:progressbar_unreach_color="#4d00f2ff"
            billy:progressbar_unreach_height="2dp" />

        <billy.snxi.customprogressbar.view.MyCircleProgressBar
            android:id="@+id/myProgressBar2"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginTop="15dp"
            android:padding="5dp"
            android:progress="50"
            billy:progressbar_reach_color="#ff7b00"
            billy:progressbar_reach_height="3dp"
            billy:progressbar_text_color="#087b00"
            billy:progressbar_text_size="9sp"
            billy:progressbar_unreach_color="#52ff7b00"
            billy:progressbar_unreach_height="2dp" />

    </LinearLayout>


</ScrollView>